#:import get_color_from_hex kivy.utils.get_color_from_hex

MDBoxLayout:
    orientation: 'vertical'
    MDBoxLayout:
        orientation: 'horizontal'
        md_bg_color: get_color_from_hex("#C7C7C7")
        radius: 15
        MDBoxLayout:
            size_hint_x: None
            width: 10
        MDAnchorLayout:
            size_hint: None, None
            size: 40, 40
            radius: 20
            pos_hint: {'center_y': 0.5}
            md_bg_color: 1, 2, 3, 1
            id: initial
        MDBoxLayout:
            size_hint_x: None
            width: 20
        MDBoxLayout:
            orientation: 'vertical'
            MDBoxLayout:
                size_hint_y: 1.7
                id: discus_inf
            MDBoxLayout:
                id: last_sms

    MDBoxLayout:
        size_hint_y: None
        height: 10
